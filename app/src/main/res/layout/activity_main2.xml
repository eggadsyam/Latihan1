<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tekskodekeluarga"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Kode Keluarga"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/teksketik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ketikan kode keluarga yang Ayah Bunda miliki disini"
            android:textSize="16dp"
            android:paddingBottom="20dp"></TextView>

        <EditText
            android:id="@+id/edit1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:lines="1"
            android:background="@drawable/edittext_custom"
            ></EditText>

        <TextView
            android:id="@+id/teksdengan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aa"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="11dp"
            ></TextView>

        <Button
            android:id="@+id/buttonmasuk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_custom"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16dp"
            android:onClick="Masuk"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/buttonmasuk"
            android:text=""></TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/white3">

        <TextView
            android:id="@+id/teksbelum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belum punya kode keluarga?"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:paddingBottom="10dp"></TextView>

        <Button
            android:id="@+id/buttonbeli"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_custom2"
            android:text="Beli Kode Keluarga Disini"
            android:textAllCaps="false"
            android:textColor="#f8f8f8"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/buttonbeli"
            android:text=""></TextView>
    </LinearLayout>

</RelativeLayout>